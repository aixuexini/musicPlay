/* pages/video/video.wxss */
.box{
  padding:10px
}
.newMv{
  font-size: 32rpx;
  font-weight: 700;
  font-family: Arial, Helvetica, sans-serif;
  border-bottom: 1px dotted #ccc;
}
.mvItem{
  margin-top: 10px;
  border-bottom: 1px solid #ccc;
}
.mvCover{
  position: relative;
}
.mvCover.view{
  color: #fff;
}
.mvCover .mvImage{
  width: 730rpx;
  border-radius: 5px;
}
.btnPlay{
  width: 34px;
  height: 34px;
  position: absolute;
  left:50%;
  top:50%;
  margin-left:-17px;
  margin-top: -17px;
}
.mvCover>view{
  position:absolute;
  left:5px;
  bottom: 10px;
  color: #fff;
  font-size: 26rpx;
}
.mvCover>view image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 3px;
}
.mvName{
  font-size: 26rpx;
  font-weight: bold;
  color:#999;
  padding-bottom: 5px;
}
